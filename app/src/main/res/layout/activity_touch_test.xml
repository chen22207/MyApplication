<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.cs.myapplication.touchTest.TouchTestActivity">

	<RelativeLayout
		android:id="@+id/touch_test_root_rl"
		android:layout_width="300dp"
		android:layout_height="300dp"
		android:background="@android:color/holo_blue_light"
		android:layout_centerInParent="true">

		<com.cs.myapplication.touchTest.MyCustomlinearLayout
			android:id="@+id/touch_test_parent"
			android:layout_width="200dp"
			android:layout_height="200dp"
			android:orientation="vertical"
			android:layout_centerInParent="true"
			android:background="@android:color/holo_red_light"
			android:gravity="center_horizontal">

			<Button
				android:id="@+id/touch_test_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="button" />

			<TextView
				android:id="@+id/touch_test_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="text"
				android:textSize="@dimen/large_size"
				android:layout_marginTop="@dimen/large_space" />
		</com.cs.myapplication.touchTest.MyCustomlinearLayout>
	</RelativeLayout>
</RelativeLayout>
